<h1>New Destination</h1>
<%= form_for @destination do |d| %>
  <div class="form-group">
      <%= d.text_field :city, class: "form-control", placeholder: "City" %>
  </div>
  <div class="form-group">
      <%= d.text_field :date, class: "form-control", placeholder: "Date" %>
  </div>
  <div class="form-group">
      <%= d.text_field :budget, class: "form-control", placeholder: "Budget" %>
  </div>
  <div class="form-group">
      <%= d.text_area :organizer, class: "form-control", placeholder: "Organizer" %>
  </div>
  <div class="form-group">
      <%= d.text_area :plans, class: "form-control", placeholder: "Plans" %>
  </div>
  <div class="form-group">
      <%= d.submit "Save Destination", class: "btn btn-block btn-default"  %>
  </div>
<% end %>
